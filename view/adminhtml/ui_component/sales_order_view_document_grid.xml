<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">sales_order_view_document_grid.sales_order_view_document_grid_data_source</item>
        </item>
    </argument>
    <settings>
        <spinner>sales_order_document_columns</spinner>
        <deps>
            <dep>sales_order_view_document_grid.sales_order_view_document_grid_data_source</dep>
        </deps>
    </settings>
    <dataSource name="sales_order_view_document_grid_data_source" component="Magento_Ui/js/grid/provider">
        <settings>
            <filterUrlParams>
                <param name="order_id">*</param>
            </filterUrlParams>
            <updateUrl path="mui/index/render"/>
        </settings>

        <dataProvider class="Invoicing\Moloni\Ui\DataProvider\OrderDocumentsProvider" name="sales_order_view_document_grid_data_source">
            <settings>
                <requestFieldName>id</requestFieldName>
                <primaryFieldName>entity_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>

